pod 'SDWebImage', '~> 4.0.0-beta2'

#下拉刷新
pod 'MJRefresh', '~> 3.1.12'

#键盘处理
pod 'IQKeyboardManager', '~> 4.0.8'

#仿头条多控制器滑动
pod 'WMPageController', '~> 1.9.9'

#仿QQ侧滑
pod 'YRSideViewController', '~> 1.0.6'

#空视图处理
pod 'DZNEmptyDataSet', '~> 1.8.1'

#视图布局
pod 'Masonry', '~> 1.0.2'

#提示
pod 'JGProgressHUD', '~> 1.4'

#以上是模块化基础，以下是模块

#首页
#pod 'EHomePage', :git =>  'https://github.com/yhl714387953/EHomePage.git'

#首页使用本地代码
